doctype html
html(lang="en")
  head
    title Modern Design Container with Table
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    // Bootstrap CSS
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: rgba(0, 0, 0, 0.65);
      }
      .bkimg {
        background-image:url('https://www.fotoskoda.cz/images/clanky/fototipy/10%20tip%C5%AF/nocni-nebe/xPixabay_milky_way_village_mountains.jpg,q0.905174255150681.pagespeed.ic.o9MabpE3RH.webp')
        }


      .container {
        background-color: rgba(0, 0, 0, 0.65);
        border-radius: 8px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        animation: fade-in 1s ease-out;
      }

      h1 {
        color: rgb(201, 201, 201);
        font-size: 32px;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
        animation: slide-down 1s ease-out;
      }

      table {
        font-size: 16px;
        margin: 0 auto;
        margin-top: 40px;
        margin-bottom: 40px;
        max-width: 800px;
        width: 100%;
      }

      th, td {
        padding: 12px;
        text-align: center;
        border: 1px solid #767676;
        color: rgb(211, 210, 210);
      }

      th {
        background-color: rgba(0, 0, 0, 0.65);
      }

      @media screen and (max-width: 600px) {
        .container {
          margin-top: 20px;
        }
      }

      @keyframes fade-in {
        from {opacity: 0;}
        to {opacity: 1;}
      }

      @keyframes slide-down {
        from {transform: translateY(-50px);}
        to {transform: translateY(0);}
      }

      @keyframes slide-up {
        from {transform: translateY(50px);}
        to {transform: translateY(0);}
      }
  body.bkimg
  
    h1 #{nadpis}
         main.container.mt-5.p-3
            table(class="table table-striped")
                 thead
                    tr.bg-dark.text-light
                        th Datům
                        th Čas
                        th Teplota 
                        th Oblačnost
                        th Vlhkost
                        th Srážky
                 tbody
                     each zaznam in pocasi
                        tr
                            td #{zaznam.datum}
                            td #{zaznam.cas}
                            td #{zaznam.teplota}
                            td #{zaznam.oblacnost}
                            td #{zaznam.vlhkost}
                            td #{zaznam.srazky}
            footer                    
            p  
                a(href="/") Zpět